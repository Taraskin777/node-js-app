extends layouts/main-layout.pug

block styles 
   link(rel="stylesheet", href="/css/product.css")

block content 
   main 
      if prods.length > 0 
         .grid
            each product in prods
               article.card.product-item
                  header.card__header
                     h1.product__title #{product.title}     
                     .card__image
                        img(src="https://media.istockphoto.com/id/1440541516/photo/open-book-in-hardcover-on-a-white-background.webp?b=1&s=170667a&w=0&k=20&c=5lOgqBkmKE0xrpd5LvFfV78aStkswFmjJe-TNuK91Z0=", alt="A Book")
                     .card__content
                        h2.product__price $19.99
                        p.product__description A very interesting book about so many even more interesting things!
                     .card__actions
                        button.btn Add to Cart
      else 
         h1 No Products



         
           